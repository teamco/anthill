<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= link_to t('show'), admin_user_path(user) %></td>
    <td><%= link_to t('edit'), edit_admin_user_path(user) %></td>
    <td><%= link_to t('destroy'), admin_user_path(user), confirm: t('are.you.sure'), method: :delete %></td>
  </tr>
<% end unless @users.nil? %>
</table>

